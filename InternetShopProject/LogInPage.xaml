<Page x:Class="InternetShopProject.LogInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InternetShopProject"
      mc:Ignorable="d" 
      Title="LogInPage">

    <Grid>
        <StackPanel Orientation="Vertical" Width="600" Margin="400,200">
            <StackPanel Orientation="Horizontal" Margin="0,20">
                <TextBlock Width="100" Text="Login: " FontSize="32" Foreground="White"/>
                <TextBox x:Name="loginBox" Width="500" Height="40"  FontSize="24"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,20">
                <TextBlock Width="100" Text="Hasło: " FontSize="32" Foreground="White"/>
                <PasswordBox x:Name="passwordBox"  Width="500" Height="40" FontSize="24"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,20" HorizontalAlignment="Right">
                <Button x:Name="LogIn" Content="Zaloguj" Foreground="White" FontSize="18" Height="32" Background="Gray" Click="LogIn_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
