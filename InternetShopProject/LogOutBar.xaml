<Page x:Class="InternetShopProject.LogOutBar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InternetShopProject"
      mc:Ignorable="d" 
      Title="LogOutBar">

    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5,0" >
            <Button x:Name="Koszyk" Background="Transparent" BorderBrush="Transparent" Height="40" Width="auto" Margin="5">
                <Image Source="/Features/Koszyk.png"/>
            </Button>
            <Button x:Name="Wyloguj" Foreground="Blue" Content="Zaloguj" FontSize="22" Background="Transparent" BorderBrush="Transparent" Height="40" Width="auto" Margin="5" Click="Wyloguj_Click" />
            <Button x:Name="Zerejestruj" Foreground="Blue" Content="Zarejestruj się" FontSize="22" Background="Transparent" BorderBrush="Transparent" Height="40" Width="auto" Margin="5" />
        </StackPanel>
    </Grid>
</Page>